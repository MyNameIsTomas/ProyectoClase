
@{
    ViewBag.Title = "NumeroDoble";
}

<h2>NumeroDoble</h2>
<ul>
    @{
        Random random = new Random();
        for (var i = 0; i < 5; i++){
            int num = random.Next(0, 20);
            <li>@Html.ActionLink(num.ToString(), "NumeroDoble", "Practicas", new { numero = num }, null)</li>
        }
    }
</ul>
<h1 style="color:blue">
    @ViewBag.Doble
</h1>

@using ProyectoMVCEF.Models
@model List<EMP>
@{
    ViewBag.Title = "EmpleadosDepartamento";
}
@{
    List<DEPT> departamentos = ViewBag.Departamentos;
    ResumenEmpleados resumen = ViewBag.Resumen;
}
<h2>Resumen de Empleados Departamento</h2>

<form method="post">
    <select name="departamentos" class="form-control">
        @foreach (DEPT departamento in departamentos)
        {
            <option value="@departamento.DEPT_NO">@departamento.DNOMBRE</option>
        }
    </select>
    <button type="submit" class="btn btn-success">Mostrar empleados</button>
</form>
@if (Model != null)
{
    <dl>
        <dt>Personas: @resumen.Personas</dt>
        <dd>Suma salarial: @resumen.SumaSalarial</dd>
        <dd>Media salarial: @resumen.MediaSalarial </dd>
        <dd>Máximo salarial: @resumen.MaximoSalarial </dd>
    </dl>
    <hr />
    <table class="table table-hover">
        @foreach (EMP emp in Model)
        {
            <tr>
                <td>@emp.APELLIDO</td>
                <td>@emp.OFICIO</td>
                <td>@emp.SALARIO</td>
            </tr>
        }
    </table>
}